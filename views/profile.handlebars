<br><br>
{{#if reviews}}
<div class="container col-9">
  <h3 class="title mb-3"> My Reviews:</h3>
  {{#each reviews as |review|}}

  <div>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">{{review.attraction.name}}</h5>
        <p class="card-text">{{review.body}}</p>
        <p>{{format_date review.updatedAt}}</p>
        <button data-id="{{review.id}}" id="edit-post" type="button" class="btn btn-secondary" data-bs-toggle="modal"
          data-bs-target="#editModal{{review.id}}">Edit</button>
        <button data-id="{{review.id}}" id="delete-post" type="button" class="btn btn-danger del-button">Delete</button>
      </div>
    </div>

    <!-- Modal -->
    <div data-id="{{review.id}}" class="modal fade" id="editModal{{review.id}}" tabindex="-1"
      aria-labelledby="editModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="editModalLabel">{{review.attraction.name}}</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form data-id="{{review.id}}" class="editReviewForm">
              <div class="mb-3">
                <input class="form-input form-control" id="editBody{{review.id}}" data-id='{{review.id}}'rows="3" value="{{review.body}}"></input>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="save-btn" data-id="{{review.id}}" type="submit" class="btn btn-primary save-btn">Save changes</button>
              </div>
            </form>
          </div>

        </div>
      </div>
    </div>

    {{/each}}
    {{else}}
    <div class="container col-9 text-center">
      <h5>You have not left any reviews.</h5>
    </div>
    {{/if}}
<br><br><br>
    <script src="/js/profile.js"></script>